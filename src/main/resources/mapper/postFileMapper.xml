<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.app.ggumteo.mapper.file.PostFileMapper">

    <insert id="insertPostFile" useGeneratedKeys="true" keyProperty="id" keyColumn="id">
        insert into tbl_post_file(id, post_id)
        values(#{id}, #{postId})
    </insert>
    <insert id="insertFile" useGeneratedKeys="true" keyProperty="id" keyColumn="id">
        insert into tbl_file (file_name, file_size, file_type, file_path)
        values (#{fileName}, #{fileSize}, #{fileType}, #{filePath})
    </insert>

</mapper>