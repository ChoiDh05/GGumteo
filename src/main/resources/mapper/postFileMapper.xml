<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.app.ggumteo.mapper.file.PostFileMapper">

    <insert id="insertPostFile" useGeneratedKeys="true" keyProperty="id" keyColumn="id">
        insert into tbl_post_file(id, post_id)
        values(#{id}, #{postId})
    </insert>
    <!-- 게시글-파일 관계 삭제 -->
    <delete id="deletePostFileById" parameterType="Long">
        delete from tbl_post_file where post_id = #{postId}
    </delete>

</mapper>